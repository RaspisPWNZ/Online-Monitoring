<UserControl x:Class="Online_monitoring.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Online_monitoring"
             mc:Ignorable="d" d:DesignWidth="800" Height="160">
    <Viewbox>
        <Grid Height="160" Width="800" >
            <Border x:Name="b1" BorderBrush="#FF00AA00" BorderThickness="4" HorizontalAlignment="Left" Width="162" VerticalAlignment="Top" Height="160">
                <Image x:Name="img" />

            </Border>
            <Border x:Name="b2" BorderBrush="#FF00AA00" BorderThickness="4" Margin="158,0,238,0"  >
                <Grid >
                    <Label x:Name="lblFIO"   VerticalContentAlignment="Center" Margin="10,0,0,75"/>
                    <Label x:Name="lblDateOfCreate"  VerticalContentAlignment="Center" Margin="10,0,0,0" Height="75" VerticalAlignment="Bottom"/>

                </Grid>

            </Border>
            <Border   x:Name="b3" Margin="558,0,0,0" BorderThickness="4" BorderBrush="#FF00AA00" >
                <Label x:Name="lblTemp" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </Border>
        </Grid>
    </Viewbox>
</UserControl>
