<Window x:Class="Online_monitoring.SettingsWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Online_monitoring"
        mc:Ignorable="d"
        Title="SettingsWin" Height="186" Width="340" ResizeMode="NoResize">
    <Grid>

        <TextBox x:Name="tbDir" HorizontalAlignment="Left" Height="23" Margin="144,14,0,0"          VerticalAlignment="Top" Width="178"/>
        <TextBox x:Name="tbLimit" HorizontalAlignment="Left" Height="23" Margin="144,42,0,0"         VerticalAlignment="Top" Width="178"/>
        <TextBox x:Name="tbMaxCount" HorizontalAlignment="Left" Height="23" Margin="144,71,0,0"     VerticalAlignment="Top" Width="178"/>

        <Label Content="Каталог:" HorizontalAlignment="Left" Margin="89,11,0,0" VerticalAlignment="Top"/>
        <Label Content="Макс кол-во записей:" HorizontalAlignment="Left" Margin="14,68,0,0" VerticalAlignment="Top"/>
        <Label Content="Порог температуры:" HorizontalAlignment="Left" Margin="21,42,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSave" Content="Сохранить" HorizontalAlignment="Left" Margin="247,127,0,0" VerticalAlignment="Top" Width="75" Click="BtnSave_Click"/>

    </Grid>
</Window>
